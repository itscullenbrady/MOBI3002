<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6B4D4C"
    android:layout_margin="8dp"
    tools:context=".MainActivity"
    android:id="@+id/main_grid">

    <!-- Horizontal Guidelines (for 16 rows) -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/row1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_percent="0.0625"
        android:orientation="horizontal" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/row2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_percent="0.125"
        android:orientation="horizontal" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/row3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_percent="0.1875"
        android:orientation="horizontal" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/row4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_percent="0.25"
        android:orientation="horizontal" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/row5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_percent="0.3125"
        android:orientation="horizontal" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/row6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_percent="0.375"
        android:orientation="horizontal" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/row7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_percent="0.4375"
        android:orientation="horizontal" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/row8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_percent="0.5"
        android:orientation="horizontal" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/row9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_percent="0.5625"
        android:orientation="horizontal" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/row10"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_percent="0.625"
        android:orientation="horizontal" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/row11"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_percent="0.6875"
        android:orientation="horizontal" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/row12"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_percent="0.75"
        android:orientation="horizontal" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/row13"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_percent="0.8125"
        android:orientation="horizontal" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/row14"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_percent="0.875"
        android:orientation="horizontal" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/row15"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_percent="0.9375"
        android:orientation="horizontal" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/row16"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_percent="1.0"
        android:orientation="horizontal" />

    <!-- Vertical Guidelines (for 12 columns) -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/col1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_percent="0.0833"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/col2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_percent="0.1666"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/col3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_percent="0.25"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/col4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_percent="0.3333"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/col5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_percent="0.4166"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/col6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_percent="0.5"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/col7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_percent="0.5833"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/col8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_percent="0.6666"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/col9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_percent="0.75"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/col10"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_percent="0.8333"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/col11"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_percent="0.9166"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/col12"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_percent="1.0"
        android:orientation="vertical"/>

    <!-- ImageView in specific grid cell -->
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/mortar"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="@id/row6"
        app:layout_constraintBottom_toTopOf="@id/row9"
        app:layout_constraintStart_toStartOf="@id/col5"
        app:layout_constraintEnd_toStartOf="@id/col9" />

    <!-- TextView in specific grid cell -->
    <TextView
        android:id="@+id/flowers"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/ingredient_description"
        android:background="#6F8E79"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="@id/row1"
        app:layout_constraintBottom_toTopOf="@id/row6"
        app:layout_constraintStart_toStartOf="@id/col5"
        app:layout_constraintEnd_toStartOf="@id/col11" />

    <!-- Additional TextView -->
    <TextView
        android:id="@+id/mixture"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/mixture_description"
        android:background="#AD6968"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="@id/row10"
        app:layout_constraintBottom_toTopOf="@id/row15"
        app:layout_constraintStart_toStartOf="@id/col5"
        app:layout_constraintEnd_toStartOf="@id/col11" />

    <!-- TextView for rosemary -->
    <TextView
        android:id="@+id/rosemaryText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Rosemary"
        android:gravity="center"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="@id/row2"
        app:layout_constraintBottom_toTopOf="@id/row3"
        app:layout_constraintStart_toStartOf="@id/col1"
        app:layout_constraintEnd_toStartOf="@id/col3" />

    <!-- ImageButton for rosemary -->
    <ImageButton
        android:id="@+id/rosemaryButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/rosemary"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="@id/row3"
        app:layout_constraintBottom_toTopOf="@id/row5"
        app:layout_constraintStart_toStartOf="@id/col1"
        app:layout_constraintEnd_toStartOf="@id/col3" />

    <!-- TextView for belladonna -->
    <TextView
        android:id="@+id/belladonnaText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Belladonna"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="@id/row5"
        app:layout_constraintBottom_toTopOf="@id/row6"
        app:layout_constraintStart_toStartOf="@id/col1"
        app:layout_constraintEnd_toStartOf="@id/col3" />

    <!-- ImageButton for belladonna -->
    <ImageButton
        android:id="@+id/belladonnaButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/belladonna"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="@id/row6"
        app:layout_constraintBottom_toTopOf="@id/row8"
        app:layout_constraintStart_toStartOf="@id/col1"
        app:layout_constraintEnd_toStartOf="@id/col3" />

    <!-- TextView for yarrow -->
    <TextView
        android:id="@+id/yarrowText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Yarrow"
        android:gravity="center"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="@id/row8"
        app:layout_constraintBottom_toTopOf="@id/row9"
        app:layout_constraintStart_toStartOf="@id/col1"
        app:layout_constraintEnd_toStartOf="@id/col3" />

    <!-- ImageButton for yarrow -->
    <ImageButton
        android:id="@+id/yarrowButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/yarrow"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="@id/row9"
        app:layout_constraintBottom_toTopOf="@id/row11"
        app:layout_constraintStart_toStartOf="@id/col1"
        app:layout_constraintEnd_toStartOf="@id/col3" />

    <!-- TextView for valerian -->
    <TextView
        android:id="@+id/valerianText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Valerian"
        android:gravity="center"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="@id/row11"
        app:layout_constraintBottom_toTopOf="@id/row12"
        app:layout_constraintStart_toStartOf="@id/col1"
        app:layout_constraintEnd_toStartOf="@id/col3" />

    <!-- ImageButton for valerian -->
    <ImageButton
        android:id="@+id/valerianButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/valerian"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="@id/row12"
        app:layout_constraintBottom_toTopOf="@id/row14"
        app:layout_constraintStart_toStartOf="@id/col1"
        app:layout_constraintEnd_toStartOf="@id/col3" />

    <Button
        android:id="@+id/mixButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/mix"
        android:scaleType="fitXY"
        android:backgroundTint="#184225"
        app:layout_constraintTop_toTopOf="@id/row9"
        app:layout_constraintBottom_toTopOf="@id/row10"
        app:layout_constraintStart_toStartOf="@id/col8"
        app:layout_constraintEnd_toStartOf="@id/col11" />

    <Button
        android:id="@+id/clearButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Clear"
        android:scaleType="fitXY"
        android:backgroundTint="#184225"
        app:layout_constraintTop_toTopOf="@id/row9"
        app:layout_constraintBottom_toTopOf="@id/row10"
        app:layout_constraintStart_toStartOf="@id/col5"
        app:layout_constraintEnd_toStartOf="@id/col8" />

</androidx.constraintlayout.widget.ConstraintLayout>